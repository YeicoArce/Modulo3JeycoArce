pipeline {
    agent any
    stages {
        stage('Newman test') {
            steps {
                sh '''
                node --version
                newman run ProyectoJeycoArce.postman_collection.json -e ambiente_examen.postman_environment.json
                '''
            }
        }

        stage('RestAssured test pipeline') {
            steps {
                sh '''
                cd RestAssured
                mvn clean test 
                '''
            }
        }

        stage('Jmeter test pipeline') {
            steps {
                sh '''
                cd LoadTest
                export PATH=/home/pjcalvov/jmeter/apache-jmeter-5.3/bin:$PATH
                jmeter -n -t examenjeycoarce.jmx 
                '''
            }
        }
           
    agent any
        stages {
        stage('Correos') {
            steps {
                    echo "Envio de email"
                }
            }
        }
        post {
            always {
                emailext body: 'Correo de prueba', recipientProviders: [[$class: 'DevelopersRecipientProvider'], [$class: 'RequesterRecipientProvider']], subject: 'Pruebas'
                
        }
     }
        
       
    }
}