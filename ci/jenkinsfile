pipeline {
    agent any
    stages {
        stage('Newman test') {
            steps {
                bat '''
                node --version
                cd Modulo3JeycoArce
                newman run ProyectoJeycoArce.postman_collection.json -e ambiente_examen.postman_environment.json
                '''
            }
        }
        
        stage('RestAssured test pipeline') {
            steps {
                bat '''
                cd RestAssured
                mvn clean test 
                cd..
                '''
            }
        }

        stage('Jmeter test pipeline') {
            steps {
                bat '''
                cd LoadTest
                jmeter -n -t examenjeycoarce.jmx 
                cd..
                '''
            }
        }
       
    }
}