pipeline {
    agent any
    stages {
        stage('Newman test') {
            steps {
                bat '''
                node --version
                npm install -g newman
                cd Modulo3JeycoArce/ci
                newman run ProyectoJeycoArce.postman_collection.json 
                cd..
                cd..
                '''
            }
        }
        
        stage('RestAssured test pipeline') {
            steps {
                bat '''
                cd Modulo3JeycoArce/RestAssured/examen
                mvn clean install 
                cd..
                cd..
                '''
            }
        }

        stage('Jmeter test pipeline') {
            steps {
                bat '''
                cd Modulo3JeycoArce/LoadTest
                jmeter -n -t examenjeycoarce.jmx 
                cd..
                '''
            }
        }
       
    }
}